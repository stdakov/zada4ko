{
  "compilerOptions": {
    "baseUrl": "./",
    "inlineSourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmitOnError": false,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "target": "ES6",
    "module": "ES6",
    "sourceMap": false,
    "inlineSources": true,
    "lib": [
      "DOM",
      "ES2015"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/ts/"
  ],
  "exclude": [
    "node_modules"
  ]
}
